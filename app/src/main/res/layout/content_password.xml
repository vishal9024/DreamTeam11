<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        app:layout_behavior="@string/appbar_scrolling_view_behavior"
        android:padding="@dimen/_16sdp"
        tools:showIn="@layout/activity_password"
        android:layout_height="match_parent">
    <androidx.appcompat.widget.LinearLayoutCompat
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:orientation="vertical">
        <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/txt_EmailId"
                style="@style/TextStyleSemiBold"
                android:layout_marginTop="@dimen/_20sdp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                android:layout_width="match_parent"
                android:textSize="@dimen/_14sdp"
                android:layout_marginLeft="@dimen/_5sdp"
                android:text="pawann4u@gmail.com"
                android:textColor="@color/textColorLightBlack"
                android:layout_height="wrap_content"/>
        <com.google.android.material.textfield.TextInputLayout
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/txt_EmailId"
                android:layout_marginTop="@dimen/_10sdp"
                android:id="@+id/til_email"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:theme="@style/EditTextLabel">
            <com.google.android.material.textfield.TextInputEditText
                    style="@style/EditTextStyle"
                    android:id="@+id/et_password"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="@string/password"
                    android:inputType="textEmailAddress"
                    android:imeOptions="actionDone"
                    android:textSize="@dimen/_11sdp"/>
        </com.google.android.material.textfield.TextInputLayout>
        <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btn_Login"
                app:layout_constraintTop_toBottomOf="@+id/til_email"
                style="@style/ButtonStyle"
                android:text="@string/login"
                android:backgroundTint="@color/colorASPrimary"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_45sdp"/>
        <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/txt_ForgetPassword"
                style="@style/TextStyleNormal"
                android:layout_marginTop="@dimen/_20sdp"
                android:gravity="center"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/btn_Next"
                android:layout_width="match_parent"
                android:textColor="@color/colorSecondary"
                android:text="@string/forget_password"
                android:layout_height="wrap_content"/>
        <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/txt_LoginWithMobile"
                style="@style/TextStyleNormal"
                android:layout_marginTop="@dimen/_20sdp"
                android:gravity="center"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/txt_ForgetPassword"
                android:layout_width="match_parent"
                android:textColor="@color/colorSecondary"
                android:text="@string/login_using_mobile_number"
                android:layout_height="wrap_content"/>
    </androidx.appcompat.widget.LinearLayoutCompat>

</androidx.constraintlayout.widget.ConstraintLayout>
