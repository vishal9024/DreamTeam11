<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="match_parent"
                android:orientation="vertical"
                android:background="@color/white"
                android:layout_height="wrap_content">
    <LinearLayout
            android:id="@+id/ll_title"
            android:padding="@dimen/_10sdp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:orientation="horizontal"
            android:background="@color/colorASPrimary"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
        <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/txt_TeamCount"
                style="@style/ToolbarTitleStyle"
                android:gravity="center"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:textColor="@color/textColorOffWhite"
                android:text="@string/points_breakup"
                android:layout_height="match_parent"/>
        <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/img_Close"
                android:gravity="start"
                app:srcCompat="@mipmap/close"
                android:layout_width="wrap_content"
                android:textColor="@color/textColorOffWhite"
                android:text="Rank"
                android:layout_height="match_parent"/>
    </LinearLayout>
    <RelativeLayout android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/rlHeader"
                    android:layout_below="@+id/ll_title">
        <ImageView
                android:id="@+id/imvUserProfile"
                android:layout_width="@dimen/_60sdp"
                android:layout_height="@dimen/_80sdp"
                android:padding="@dimen/_5sdp"
                android:src="@mipmap/logo"
        />
        <LinearLayout
                android:id="@+id/llName"
                android:layout_toRightOf="@+id/imvUserProfile"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
            <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/txt_label"
                    android:layout_below="@+id/ll_title"
                    android:padding="@dimen/_10sdp"
                    style="@style/TextStyleMedium"
                    android:background="@color/white"
                    android:gravity="center"
                    android:layout_width="wrap_content"
                    android:textSize="@dimen/_14sdp"
                    android:textColor="@color/textColorLightBlack"
                    android:text="Anam Amin"
                    android:layout_height="wrap_content"/>
            <ImageView
                    android:id="@+id/imvStar"
                    android:layout_width="@dimen/_15sdp"
                    android:layout_height="@dimen/_15sdp"
                    android:layout_gravity="center_vertical"
                    android:src="@mipmap/star_icon"
            />
        </LinearLayout>
        <LinearLayout
                android:id="@+id/ll_headerView"
                android:layout_below="@+id/llName"
                android:layout_toRightOf="@+id/imvUserProfile"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
            <LinearLayout android:layout_width="0dp"
                          android:layout_weight="1"
                          android:layout_height="wrap_content"
            android:orientation="vertical">
                <androidx.appcompat.widget.AppCompatTextView
                        style="@style/TextStyleSemiBold"
                        android:background="@color/white"
                        android:gravity="center"
                        android:layout_width="wrap_content"
                        android:textSize="@dimen/_11sdp"
                        android:textColor="@color/textColorGray"
                        android:text="Selected by"
                        android:textAllCaps="true"
                        android:layout_height="wrap_content"/>
                <androidx.appcompat.widget.AppCompatTextView
                        android:id="@+id/txtSelectedBy"
                        android:padding="@dimen/_5sdp"
                        style="@style/TextStyleMedium"
                        android:background="@color/white"
                        android:gravity="center"
                        android:layout_width="wrap_content"
                        android:textSize="@dimen/_16sdp"
                        android:textColor="@color/textColorLightBlack"
                        android:text="3.21%"
                        android:layout_height="wrap_content"/>
            </LinearLayout>
            <LinearLayout android:layout_width="0dp"
                          android:layout_weight="1"
                          android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center">
                <androidx.appcompat.widget.AppCompatTextView
                        style="@style/TextStyleSemiBold"
                        android:background="@color/white"
                        android:gravity="center"
                        android:layout_width="wrap_content"
                        android:textSize="@dimen/_11sdp"
                        android:textColor="@color/textColorGray"
                        android:text="@string/points"
                        android:textAllCaps="true"
                        android:layout_height="wrap_content"/>
                <androidx.appcompat.widget.AppCompatTextView
                        android:id="@+id/txtPoints"
                        android:padding="@dimen/_5sdp"
                        style="@style/TextStyleMedium"
                        android:background="@color/white"
                        android:gravity="center"
                        android:layout_width="wrap_content"
                        android:textSize="@dimen/_16sdp"
                        android:textColor="@color/textColorLightBlack"
                        android:text="23"
                        android:layout_height="wrap_content"/>
            </LinearLayout>
            <LinearLayout android:layout_width="0dp"
                          android:layout_weight="1"
                          android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="right">
                <androidx.appcompat.widget.AppCompatTextView
                        style="@style/TextStyleSemiBold"
                        android:background="@color/white"
                        android:gravity="center"
                        android:layout_width="wrap_content"
                        android:textSize="@dimen/_11sdp"
                        android:textColor="@color/textColorGray"
                        android:text="@string/credits"
                        android:textAllCaps="true"
                        android:layout_height="wrap_content"/>
                <androidx.appcompat.widget.AppCompatTextView
                        android:id="@+id/txtCredits"
                        android:padding="@dimen/_5sdp"
                        style="@style/TextStyleMedium"
                        android:background="@color/white"
                        android:gravity="center"
                        android:layout_width="wrap_content"
                        android:textSize="@dimen/_16sdp"
                        android:textColor="@color/textColorLightBlack"
                        android:text="8.5"
                        android:layout_height="wrap_content"/>
            </LinearLayout>

        </LinearLayout>
        <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/txt_status"
                android:layout_below="@+id/ll_headerView"
                android:layout_toRightOf="@+id/imvUserProfile"
                android:padding="@dimen/_5sdp"
                style="@style/TextStyleSemiBold"
                android:background="@color/white"
                android:gravity="center"
                android:layout_width="wrap_content"
                android:textSize="@dimen/_12sdp"
                android:textColor="@color/textColorGray"
                android:text="Not in your team"
                android:layout_height="wrap_content"/>
    </RelativeLayout>

    <View
            android:id="@+id/view1"
            android:layout_below="@+id/rlHeader"
            android:background="@color/colorItemBackgroundLightGray"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_1sdp"/>
    <androidx.recyclerview.widget.RecyclerView
            android:layout_below="@+id/view1"
            android:id="@+id/rv_rank"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_width="match_parent"
            tools:listitem="@layout/item_winners_list_bottomsheet"
            android:layout_height="wrap_content">
    </androidx.recyclerview.widget.RecyclerView>


</RelativeLayout>
